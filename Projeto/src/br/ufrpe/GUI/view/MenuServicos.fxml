<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="br.ufrpe.GUI.model.MenuServicosController">
   <children>
      <VBox layoutX="646.0" prefHeight="600.0" prefWidth="154.0">
         <children>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#abrirServicoAdicionar" prefHeight="200.0" prefWidth="154.0" text="Adicionar Serviço" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../lib/Imgs/add-128.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#abrirServicoRemover" prefHeight="200.0" prefWidth="154.0" text="Remover Serviço" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../lib/Imgs/lixeira.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#abrirServicoAtualizar" prefHeight="200.0" prefWidth="154.0" text="Atualizar Serviço" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../lib/Imgs/1380118359_new-24.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#voltarMenu" prefHeight="200.0" prefWidth="154.0" text="Voltar" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../lib/Imgs/home-512.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
      <TableView fx:id="servicosTable" prefHeight="600.0" prefWidth="492.0">
         <columns>
            <TableColumn fx:id="codigoCol" prefWidth="75.0" text="Código" />
            <TableColumn fx:id="nomeCol" prefWidth="291.0" text="Nome" />
            <TableColumn fx:id="precoCol" minWidth="0.0" prefWidth="123.0" text="Preço" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
